<%- include("partials/header") %>
    <div class="container">
        <div class="row">

            <div style="width: 30%; margin: 25px auto;">
                <h1 style="text-align: center">Edit
                    <%= blog.title %>
                </h1>
                <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <label><strong> Blog Title:</strong></label>
                        <input class="form-control" type="text" name="blog[title]" value="<%=blog.title %>">
                    </div>
                    <div class="form-group">
                        <label><strong>Image:</strong> </label>
                        <input class="form-control" type="text" name="blog[image]" value="<%=blog.image %>">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlTextarea4"><strong> Blog-Content:</strong></label>
                        <textarea class="form-control" rows="5" name="blog[body]"><%=blog.body %></textarea>

                        <!-- <label>Blog-Content:</label>
                        <textarea name="blog[body]"></textarea> -->
                    </div>
                    <div class="form-group">
                        <h4><button class="btn btn-lg btn-primary btn-block">Submit!</button></h4>
                        <!-- <input type="Submit"> -->
                    </div>
                </form>
                <a href="/blogs">Go Back</a>
            </div>
        </div>
    </div>
